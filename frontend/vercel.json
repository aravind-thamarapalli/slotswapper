{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://slotswapper-bknd.vercel.app/api/:path*"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://slotswapper-bknd.vercel.app",
    "VITE_WS_URL": "wss://slotswapper-bknd.vercel.app",
    "VITE_CLIENT_URL": "https://slotswapper-pink.vercel.app"
  }
}
